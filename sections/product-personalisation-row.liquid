{{ 'personalisation-row.css' | asset_url | stylesheet_tag }}

<div class="page-width">
  {% render 'personalisation-row' %}
</div>

{% schema %}
{
  "name": "Personalisation-row",
  "settings": [
    {
      "type": "header",
      "content": "Collapsible section"
    },
    {
      "type": "text",
      "id": "summary_text",
      "label": "Summary text",
      "default": "Customize Your Product Here"
    },
    {
      "type": "color",
      "id": "collapsible_background_color",
      "label": "Background color",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "collapsible_hover_background_color",
      "label": "Hover background color",
      "default": "#f5f5f5"
    },
    {
      "type": "color",
      "id": "collapsible_text_color",
      "label": "Text color",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "collapsible_hover_text_color",
      "label": "Hover text color",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "collapsible_border_color",
      "label": "Border color",
      "default": "#e0e0e0"
    },
    {
      "type": "color",
      "id": "collapsible_hover_border_color",
      "label": "Hover border color",
      "default": "#cccccc"
    },
    {
      "type": "range",
      "id": "collapsible_border_thickness",
      "min": 0,
      "max": 10,
      "step": 1,
      "unit": "px",
      "label": "Border thickness",
      "default": 1
    },
    {
      "type": "range",
      "id": "collapsible_border_radius",
      "min": 0,
      "max": 30,
      "step": 2,
      "unit": "px",
      "label": "Border radius",
      "default": 6
    },
    {
      "type": "color",
      "id": "arrow_color",
      "label": "Arrow color",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "arrow_hover_color",
      "label": "Arrow hover color",
      "default": "#1f9393"
    },
    {
      "type": "header",
      "content": "Box shadow"
    },
    {
      "type": "range",
      "id": "shadow_horizontal",
      "min": -20,
      "max": 20,
      "step": 1,
      "unit": "px",
      "label": "Horizontal offset",
      "default": 0
    },
    {
      "type": "range",
      "id": "shadow_vertical",
      "min": -20,
      "max": 20,
      "step": 1,
      "unit": "px",
      "label": "Vertical offset",
      "default": 2
    },
    {
      "type": "range",
      "id": "shadow_blur",
      "min": 0,
      "max": 40,
      "step": 2,
      "unit": "px",
      "label": "Blur radius",
      "default": 8
    },
    {
      "type": "range",
      "id": "shadow_spread",
      "min": -20,
      "max": 20,
      "step": 1,
      "unit": "px",
      "label": "Spread radius",
      "default": 0
    },
    {
      "type": "color",
      "id": "shadow_color",
      "label": "Shadow color",
      "default": "rgba(0, 0, 0, 0.1)"
    },
    {
      "type": "header",
      "content": "Box shadow on hover"
    },
    {
      "type": "range",
      "id": "shadow_hover_horizontal",
      "min": -20,
      "max": 20,
      "step": 1,
      "unit": "px",
      "label": "Hover horizontal offset",
      "default": 0
    },
    {
      "type": "range",
      "id": "shadow_hover_vertical",
      "min": -20,
      "max": 20,
      "step": 1,
      "unit": "px",
      "label": "Hover vertical offset",
      "default": 4
    },
    {
      "type": "range",
      "id": "shadow_hover_blur",
      "min": 0,
      "max": 40,
      "step": 2,
      "unit": "px",
      "label": "Hover blur radius",
      "default": 16
    },
    {
      "type": "range",
      "id": "shadow_hover_spread",
      "min": -20,
      "max": 20,
      "step": 1,
      "unit": "px",
      "label": "Hover spread radius",
      "default": 0
    },
    {
      "type": "color",
      "id": "shadow_hover_color",
      "label": "Hover shadow color",
      "default": "rgba(0, 0, 0, 0.15)"
    },
    {
      "type": "header",
      "content": "Text input"
    },
    {
      "type": "text",
      "id": "input_label",
      "label": "Text label",
      "default": "Your personalization text"
    },
    {
      "type": "text",
      "id": "property_name",
      "label": "Text property name",
      "default": "Personalization"
    },
    {
      "type": "textarea",
      "id": "placeholder_text",
      "label": "Placeholder text",
      "default": "Enter your custom text here. Press Enter for new lines."
    },
    {
      "type": "header",
      "content": "Font selector"
    },
    {
      "type": "text",
      "id": "font_label",
      "label": "Font label",
      "default": "Choose font"
    },
    {
      "type": "text",
      "id": "font_property_name",
      "label": "Font property name",
      "default": "Font"
    },
    {
      "type": "text",
      "id": "greek_fonts_link_text",
      "label": "Greek fonts link text",
      "default": "Greek Fonts"
    },
    {
      "type": "color",
      "id": "greek_fonts_link_color",
      "label": "Greek fonts link color",
      "default": "#1f9393"
    },
    {
      "type": "image_picker",
      "id": "greek_fonts_image",
      "label": "Greek fonts image"
    },
    {
      "type": "header",
      "content": "File upload"
    },
    {
      "type": "text",
      "id": "file_label",
      "label": "File label",
      "default": "Upload file"
    },
    {
      "type": "text",
      "id": "file_property_name",
      "label": "File property name",
      "default": "Uploaded File"
    },
    {
      "type": "text",
      "id": "file_accept",
      "label": "Accepted file types",
      "default": "image/*,.pdf"
    },
    {
      "type": "header",
      "content": "Footnote"
    },
    {
      "type": "textarea",
      "id": "footnote_text",
      "label": "Footnote text",
      "default": "The personalization preview is not accurate and should be used only for a general idea of the engraving, as it is a simulation that will not look exactly like the final product."
    },
    {
      "type": "range",
      "id": "footnote_size",
      "min": 10,
      "max": 16,
      "step": 1,
      "unit": "px",
      "label": "Footnote size",
      "default": 11
    },
    {
      "type": "color",
      "id": "footnote_color",
      "label": "Footnote color",
      "default": "#666666"
    },
    {
      "type": "header",
      "content": "Input style"
    },
    {
      "type": "color",
      "id": "label_color",
      "label": "Label color",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "input_border_color",
      "label": "Input border color",
      "default": "#cccccc"
    },
    {
      "type": "color",
      "id": "input_focus_color",
      "label": "Input focus color",
      "default": "#1f9393"
    },
    {
      "type": "range",
      "id": "input_border_radius",
      "min": 0,
      "max": 20,
      "step": 2,
      "unit": "px",
      "label": "Input border radius",
      "default": 6
    },
    {
      "type": "header",
      "content": "Preview display"
    },
    {
      "type": "range",
      "id": "preview_text_size",
      "min": 12,
      "max": 48,
      "step": 2,
      "unit": "px",
      "label": "Preview text size",
      "default": 20
    },
    {
      "type": "color",
      "id": "preview_text_color",
      "label": "Preview text color",
      "default": "#ffffff"
    },
    {
      "type": "range",
      "id": "mockup_border_radius",
      "min": 0,
      "max": 20,
      "step": 2,
      "unit": "px",
      "label": "Mockup border radius",
      "default": 6
    }
  ],
  "presets": [
    {
      "name": "Live preview"
    }
  ]
}
{% endschema %}
