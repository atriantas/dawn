  }

  .ai-live-preview-footnote-{{ ai_gen_id }} {
    font-size: {{ block.settings.footnote_size }}px;
    color: {{ block.settings.footnote_color }};
    line-height: 1.4;
    font-style: italic;
  }
{% endstyle %}

<live-preview-{{ ai_gen_id }} class="ai-live-preview-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
